---
import companyData from '../data/company_details.json';

const legalCompanyName = companyData["legalName"];
const taxId = companyData["taxID"];
const copyrightYear = new Date().getFullYear();
---
<footer>
  <small>
    &copy; {copyrightYear} {legalCompanyName} / {taxId}
  </small>
</footer>

<style>
    footer {
      background-color: var(--surface-2);
      padding: var(--size-4);
      text-align: center;
    }
  </style>